{
  "name": "advanced-livechat-saas",
  "version": "1.0.0",
  "description": "Advanced Live Chat SaaS - Complete multi-tenant live chat solution",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "node deploy.js",
    "start:single": "node single-url-deploy-improved.js",
    "start:railway": "node railway-mysql-start.js",
    "start:railway:postgresql": "node railway-postgresql-start.js",
    "start:prod": "NODE_ENV=production node deploy.js",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "build": "npm install --prefix backend && npm install --prefix frontend && npm run build --prefix frontend",
    "build:backend": "cd backend && echo 'Backend build complete'",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "setup": "npm run install:all && npm run setup:db",
    "setup:db": "cd backend && npm run migrate && npm run seed",
    "setup:quick": "npm run install:all && npm run setup:db && npm run build:frontend",
    "test": "npm-run-all test:backend test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "health": "npm-run-all health:backend health:frontend",
    "health:backend": "curl http://localhost:3000/health || echo 'Backend not running'",
    "health:frontend": "curl http://localhost:5173 || echo 'Frontend not running'",
    "logs": "pm2 logs",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "status": "pm2 status",
    "deploy": "node deploy.js",
    "deploy:prod": "NODE_ENV=production node deploy.js",
    "deploy:windows": "quick-deploy.bat",
    "deploy:unix": "chmod +x deploy.sh && ./deploy.sh",
    "deploy:single": "node single-url-deploy.js",
    "deploy:single:prod": "NODE_ENV=production node single-url-deploy.js",
    "quick-start": "npm run setup:quick && npm start",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dev.sqlite3 logs/*.log",
    "fresh": "npm run clean && npm run setup:quick && npm start",
    "verify": "node verify-deployment.js",
    "verify:single": "node verify-single-url.js",
    "migrate": "cd backend && npm run migrate",
    "seed": "cd backend && npm run seed",
    "migrate:railway": "node migrate-railway.js",
    "start:railway:mysql": "node railway-mysql-start.js"
  },
  "keywords": [
    "live-chat",
    "saas",
    "multi-tenant",
    "real-time",
    "socket-io",
    "react",
    "nodejs"
  ],
  "author": "Advanced Live Chat Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.4.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "mysql2": "^3.6.5"
  }
}
